{
  "name": "stargazer-hub",
  "version": "0.1.0",
  "description": "GitHub Starred Repository Manager",
  "private": true,
  "main": "dist/main.bundle.js",
  "scripts": {
    "watch": "webpack --config ./config/webpack.config.js --watch",
    "start": "webpack serve --config ./config/webpack.config.js --open",
    "build": "webpack --config ./config/webpack.config.js",
    "electron-build": "webpack --config ./config/webpack.electron.config.js",
    "electron-start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "npm run electron-build && electron-builder --dir",
    "dist": "npm run electron-build && electron-builder"
  },
  "author": "Arca Artem",
  "license": "MIT",
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^5.0.1",
    "electron": "^11.5.0",
    "electron-builder": "^22.9.1",
    "html-webpack-plugin": "^4.5.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@types/fuzzaldrin-plus": "^0.6.1",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "evergreen-ui": "^5.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0"
  },
  "build": {
    "appId": "stargazer-hub",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "directories": {
      "output": "electron-dist"
    }
  }
}
